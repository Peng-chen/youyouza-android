    <PreferenceCategory
        android:key="mymsg"
        android:summary="个人信息"
        android:title="个人信息">
        <EditTextPreference
            android:key="myname"
            android:title="请输入名字"
            android:summary="姓名"/>
        <EditTextPreference
            android:key="myTall"
            android:inputType="numberDecimal"
            android:title="身高（cm）"
            android:summary="10"/>
        <EditTextPreference
            android:key="myWeight"
            android:inputType="numberDecimal"
            android:title="体重（kg）"
            android:summary="40"/>
        <ListPreference
            android:key="gender"
            android:title="性别"
            android:summary="选择您的性别"
            android:dialogTitle="性别"
            android:entries="@array/gender_name_list"
            android:entryValues="@array/gender_value_list"/>
        <EditTextPreference
            android:key="myLegLength"
            android:inputType="numberDecimal"
            android:title="步长（cm）"
            android:summary="40"/>
    </PreferenceCategory>

